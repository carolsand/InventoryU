<%- include('../partials/header') %>
<section id="show-page">
  <h2>Update Your Room</h2>
  <label>Room Description</label>
  <textarea name="description"></textarea>
  <div>Room: <%= room.name %> </div>
  <div>Description: <%= room.description %></div>
  <div>Assets:<%= items.name %> </div>
  <div>Asset Description: </div>
  <div><%= items.description %></div>
  
  <table>
  <thead>
    <tr>
      <th>Room </th>
      <th>Description </th>
    </tr>
  </thead>
  <tbody>
    <% rooms.forEach(function(rm) { %>
    <tr>
        <td><%= rm.name %></td>
        <td><%= rm.description %></td>
        <td><textarea name="description"></textarea></td>
        <td><a href='<%= /update/rm._id %>'>Details</a></td>
        <td><form action="/rooms/<%= rm._id%>?_method=PUT" method="POST"><button>Update Room</button></form></td>
    </tr>
  <% }); %>
  </tbody>
</table>
</section>

<%- include('../partials/footer') %>
