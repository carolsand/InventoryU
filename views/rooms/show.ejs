<%- include('../partials/header') %>
<h1>InventoryU</h1>
<section id="show-page">
<h2>List of Assests</h2>  
<table>
  <thead>
    <tr>
      <th>Room </th>
      <th>Description </th>
      <th>Details </th>
      <th>Update Room </th>
      <th>Delete </th>
    </tr>
  </thead>
  <tbody>
    <% rooms.forEach(function(rm) { %>
    <tr>
        <td><%= rm.name %></td>
        <td><%= rm.description %></td>
        <td> <a href='/rooms/<%= rm._id %>'>Details</a></td>
        <td> <a href='/rooms/<%= rm._id %>/edit'>Update room</a></td>
        <td><form action="/rooms/<%= rm._id%>?_method=DELETE" method="POST"><button>Delete Room</button></form></td>
    </tr>
  <% }); %>
  </tbody>
</table>
<br>
</section>
<footer>
<%- include('../partials/footer') %>
</footer>
  