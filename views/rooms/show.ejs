<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= room.title %></div>
  <div> <%= room.description %></div>
  <ul>
    <%- room.item.map(p => 
      `<li>${p.name} <small>${p.item.toLocaleDateString()}</small></li>`
    ).join('') %>
  </ul>
</section>

<form id="add-per-to-room" action="/rooms/<%= romm._id%>/items" method="POST">
  <select name="itemId">
    <%- items.map(p => `<option value="${p._id}">${p.name}</option>`).join('') %>
  </select>
  <button type="submit">Add to Room</button>
</form>

<% if (room.items.length) { %>
<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Item</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% room.items.forEach(function(r) { %>
    <tr>
      <td>
        <%= r.createdAt.toLocaleDateString() %>
      </td>
      <td>
        <%= r.items %>
      </td>
      <td>
        <%= r.description %>
      </td>
    </tr>
    <% }); %>
    <tr>
      <td colspan="2"></td>
    </tr>
  </tbody>
</table>
<% } else { %>
<h5>No Items Yet</h5>
<% } %>


<%- include('../partials/footer') %>